# Kconfig file for Tactility example app
menu "Tactility App"
    config TT_DEVICE_NAME
        string "Device Name"
        default ""
    config TT_DEVICE_ID
        string "Device Identifier"
        default ""
    choice
        prompt "Device"
        default TT_DEVICE_CUSTOM
        config TT_DEVICE_CUSTOM
            bool "Custom"
